---
import { Image } from "astro:assets";
import ecommerce from "../assets/ecommerce.png";
import mercedesmichelini from "../assets/mercedes.png";
import perfilplac from "../assets/perfilplac.png";
import redsocial from "../assets/redsocial.png";
import iconCode from "../../public/svg/code-white.svg";
import iconNavigation from "../../public/svg/navigation-white.svg";
---

<section id="proyectos" class="border-t border-Background-linea mt-10">
    <div class="w-full mx-auto lg:w-[1000px] my-14">
        <h2 class="text-lg mb-2 text-Violet-text mt-10">Mis trabajos</h2>
        <h3 class="text-5xl text-Color-titulo mb-8">Proyectos</h3>
        <div class="">
            <div class="grid grid-cols-1 gap-10 pt-10 mt-10 md:grid-cols-2">
                <article>
                    <div class="flex justify-center cursor-pointer">
                        <Image
                            src={ecommerce}
                            alt="Proyecto Ecommerce"
                            class="w-full h-48 max-w-md hover:scale-110 transition-all duration-300"
                        />
                    </div>

                    <div class="flex justify-center p-3 mt-5">
                        <div>
                            <h4
                                class="text-Color-titulo text-2xl font-semibold"
                            >
                                Desarrollador
                            </h4>
                            <span class="text-Color-parrafo text-sm py-1"
                                >E-commerce</span
                            >
                        </div>

                        <div class="flex gap-2 ml-auto">
                            <a
                                href="https://github.com/DamianBermudez94/desafio-final-mod10"
                                target="_blank"
                                class="border border-Violet-background rounded-md p-2 hover:bg-Background-icon transition-all"
                            >
                                <Image
                                    src={iconCode}
                                    alt="E-commerce ProyectoWeb"
                                    class="w-9 h-9"
                                />
                            </a>
                            <a
                                href="https://desafio-final-mod10.vercel.app/"
                                target="_blank"
                                class="border border-Violet-background rounded-md p-2 hover:bg-Background-icon transition-all"
                            >
                                <Image
                                    src={iconNavigation}
                                    alt="E-commerce ProyectoWeb"
                                    class="w-9 h-9"
                                />
                            </a>
                        </div>
                    </div>
                </article>
                <article>
                    <div class="flex justify-center cursor-pointer">
                        <Image
                            src={redsocial}
                            alt="Proyecto Red social"
                            class="shadow-md hover:scale-110 transition-all duration-300 w-full h-48 max-w-md"
                        />
                    </div>

                    <div class="flex items-center p-3 mt-5">
                        <div>
                            <h4
                                class="text-Color-titulo text-2xl font-semibold"
                            >
                                Desarrollador
                            </h4>
                            <span class="text-Color-parrafo text-sm py-1">
                                Red Social
                            </span>
                        </div>

                        <div class="flex gap-2 ml-auto">
                            <a
                                href="https://github.com/DamianBermudez94/frond-end-red-social"
                                target="_blank"
                                class="border border-Violet-background rounded-md p-2 hover:bg-Background-icon transition-all"
                            >
                                <Image
                                    src={iconCode}
                                    alt="RedSocial ProyectoWeb"
                                    class="w-9 h-9"
                                />
                            </a>
                            <a
                                href="https://frond-end-red-social.vercel.app/"
                                target="_blank"
                                class="border border-Violet-background rounded-md p-2 hover:bg-Background-icon transition-all"
                            >
                                <Image
                                    src={iconNavigation}
                                    alt="RedSocial ProyectoWeb"
                                    class="w-9 h-9"
                                />
                            </a>
                        </div>
                    </div>
                </article>
                <article>
                    <div class="flex justify-center cursor-pointer">
                        <Image
                            src={perfilplac}
                            alt="Proyecto Landing page"
                            class="shadow-md hover:scale-110 transition-all duration-300 w-full h-48 max-w-md"
                        />
                    </div>

                    <div class="flex items-center p-3 mt-5">
                        <div>
                            <h4
                                class="text-Color-titulo text-2xl font-semibold"
                            >
                                Diseñador
                            </h4>
                            <span class="text-Color-parrafo text-sm py-1"
                                >Landing Page</span
                            >
                        </div>

                        <div class="flex gap-2 ml-auto">
                            <a
                                href="https://perfil-plac.com/"
                                target="_blank"
                                class="border border-Violet-background rounded-md p-2 hover:bg-Background-icon transition-all"
                            >
                                <Image
                                    src={iconCode}
                                    alt="landingPage DiseñoWeb"
                                    class="w-9 h-9"
                                />
                            </a>
                            <a
                                href="https://github.com/DamianBermudez94/Perfil-Plac"
                                target="_blank"
                                class="border border-Violet-background rounded-md p-2 hover:bg-Background-icon transition-all"
                            >
                                <Image
                                    src={iconNavigation}
                                    alt="landingPage DiseñoWeb"
                                    class="w-9 h-9"
                                />
                            </a>
                        </div>
                    </div>
                </article>
                <article>
                    <div class="flex justify-center cursor-pointer">
                        <Image
                            src={mercedesmichelini}
                            alt="Proyecto Negocios Inmobiliaria"
                            class="shadow-md hover:scale-110 transition-all duration-300 w-full h-48 max-w-md"
                        />
                    </div>

                    <div class="flex items-center p-3 mt-5">
                        <div>
                            <h4
                                class="text-Color-titulo text-2xl font-semibold"
                            >
                                Diseñador
                            </h4>
                            <span class="text-Color-parrafo text-sm py-1">
                                Sitio Web
                            </span>
                        </div>

                        <div class="flex gap-2 ml-auto">
                            <a
                                href="https://www.michelinimercedes.com/"
                                target="_blank"
                                class="border border-Violet-background rounded-md p-2 hover:bg-Background-icon transition-all"
                            >
                                <Image
                                    src={iconCode}
                                    alt="inmobiliaria SitioWeb"
                                    class="w-9 h-9"
                                />
                            </a>
                            <a
                                href="https://github.com/DamianBermudez94/mercedes-michelini"
                                class="border border-Violet-background rounded-md p-2 hover:bg-Background-icon transition-all"
                            >
                                <Image
                                    src={iconNavigation}
                                    alt="inmobiliaria SitioWeb"
                                    class="w-9 h-9"
                                />
                            </a>
                        </div>
                    </div>
                </article>
            </div>
        </div>
        <a
            href=""
            class="text-xl text-Color-parrafo flex justify-center gap-3 mt-8 border border-Violet-background p-2 rounded-full hover:bg-Background-icon transition-all"
            >Más proyectos en <span
                ><svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="24"
                    height="24"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    class="lucide lucide-github"
                    ><path
                        d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4"
                    ></path><path d="M9 18c-4.51 2-5-2-7-2"></path></svg
                ></span
            >
        </a>
    </div>
</section>
