---
import githubIcon from "../assets/github.svg";
import linkedinIcon from "../assets/linkedin.svg";
import emailIcon from "../assets/mail.svg";
import LottieAnimation from "./LottieAnimation.astro";
---

<div id="container">
	<main class="bg-gray-800">
		<LottieAnimation />
		<section id="hero" class="w-full mx-auto lg:w-[740px] py-20 absolute bottom-90 left-0 right-0">
			
			<h1
				class="text-black text-5xl font-bold justify-center flex-row text-center"
			>
				Hey, soy Damian Bermudez
			</h1>
			<h2 class="m-5">
				Desarrollador y Dise√±ador Web con +3 de experiencia. De Lobos -
				Provincia de Buenos Aires - Argentina. Transformando ideas y
				Creando soluciones en experiencia digitales.
			</h2>
			<div class="flex justify-between m-3">
				<div class="border rounded-2xl text-[16px] p-2">
					<a href="https://github.com/tuusuario" target="_blank">
						<img src={githubIcon.src} class="w-6 h-6 hover:opacity-80" alt="GitHub">
					</a>
				</div>
				<div class="border rounded-2xl text-[16px] p-2">
					<a href="mailto:tuemail@example.com">
						<img src={emailIcon.src} class="w-6 h-6 hover:opacity-80" alt="Email">
					</a>
				</div>
				<div class="border rounded-2xl text-[16px] p-2">
					<a href="https://linkedin.com/in/tuusuario" target="_blank">
						<img src={linkedinIcon.src} class="w-6 h-6 hover:opacity-80" alt="LinkedIn">
					</a>
				</div>
			</div>
		</section>
	</main>
</div>
